<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.activities.AddNewspaperActivity">

    <EditText
        android:id="@+id/edt_rss_feed_name"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edttext_light_background"
        android:ems="10"
        android:hint="RSS Feed Name"
        android:inputType="text"
        android:paddingLeft="16dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/textColorEditText" />

    <EditText
        android:id="@+id/edt_rss_feed_link"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edttext_light_background"
        android:hint="RSS Feed Link"
        android:inputType="text"
        android:paddingLeft="16dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/textColorEditText" />

    <Button
        android:id="@+id/add_rss_feed"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="@color/colorAccent"
        android:onClick="addRSSFeed"
        android:text="Add"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

</LinearLayout>